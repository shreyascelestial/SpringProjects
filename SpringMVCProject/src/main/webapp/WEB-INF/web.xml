<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>
  
  <servlet>
  <servlet-name>spring</servlet-name><!-- name is ur choice -->
  <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class><!-- we need to create servlet class and we need to pass that in here -->
  <load-on-startup>1</load-on-startup>
  </servlet>
  
  
  <servlet-mapping>
  <servlet-name>spring</servlet-name>
  <url-pattern>/</url-pattern><!-- Form action shld be passed here, / can handle all from action -->
  </servlet-mapping>
  
 </web-app>
